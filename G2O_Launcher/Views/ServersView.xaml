<UserControl x:Class="G2O_Launcher.Views.ServersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:G2O_Launcher.Views"
             xmlns:p="clr-namespace:G2O_Launcher.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="500" BorderThickness="0">
    <Grid>
        <DataGrid  Margin="0" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Res[resServerAddress].Value}"/>
                <DataGridTextColumn Header="{Binding Res[resServerName].Value}"/>
                <DataGridTextColumn Header="{Binding Res[resServerPlayers].Value}"/>
                <DataGridTextColumn Header="{Binding Res[resServerVersion].Value}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
